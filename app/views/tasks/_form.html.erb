<%= form_with model: @task do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :title, { class: "form-label" } %>
        <%= f.text_field :title, { class: "form-control", placeholder: "Read" } %>
      </div>
      <div class="mb-3">
        <%= f.label :details, { class: "form-label" } %>
        <%= f.text_field :details, { class: "form-control", placeholder: "Read 20 pages" } %>
      </div>
      <div class="mb-3 form-check">
        <%= f.label :completed, { class: "form-check-label" } %>
        <%= f.check_box :completed %>
      </div>
      <div class="mb-3">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
